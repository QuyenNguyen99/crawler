{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "decima"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "assets/css/bootstrap.min.css",
        "assets/css/custom.css",
        "assets/awesome/css/font-awesome.min.css",
        "assets/authenticate/css/style.css",
        "assets/admin/css/css.css",
        "assets/fonts/linea/styles.css",
        "assets/styles/app.scss",
        "./assets/css/token-input.css",
        "./assets/css/token-input-facebook.css",
        "./assets/css/vendor.css",
        "./assets/css/jquery.CalendarHeatmap.min.css"
      ],
      "scripts": [
        "./assets/js/jquery.min.js",  
        "./assets/js/jquery.tokeninput.js",
        "./assets/js/bootstrap.min.js",
        "./assets/js/custom.js",
        "./assets/js/exif.js",
        "./assets/js/fn.js",
        "./assets/js/moment.min.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "source": "environments/environment.ts",
        "dev": "environments/environment.dev.ts",
        "hmr": "environments/environment.hmr.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**/*"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**/*"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**/*"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "scss",
    "component": {}
  }
}
